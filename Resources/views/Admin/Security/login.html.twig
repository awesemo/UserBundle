{% extends base_template %}

{% block html_class %}rz-login-page{% endblock html_class%}

{# remove navbar #}
{% block navbar %}{% endblock %}

{% block main_content %}
    <div class="login-box">
        <form action="{{ path("sonata_user_admin_security_check") }}" method="post" id="login_form">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="login-top"><i class="micon-key-2"></i> Sign in to {{ admin_pool.title }}</div>
            {% if error %}
            <div class="alert alert-danger alert-login">
                <a class="close" data-dismiss="alert">Ã—</a>
                {{ error|trans({}, 'SonataUserBundle') }}
            </div>
            {% endif %}
            <div class="login-form-container row-fluid">
                <div class="control-group formSepH_pa formSepV_pc">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span><input  type="text" id="username" name="_username" placeholder="{{ 'security.login.username'|trans({}, 'RzUserBundle') }}" value="{{ last_username }}" />
                        </div>
                    </div>
                </div>
                <div class="control-group formSepH_pa formSepV_pc">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span><input type="password" id="password" name="_password" value="password" />
                        </div>
                    </div>
                </div>

                <div class="control-group  formSepV_pc">
                    <div class="controls clearfix">
                        <label class="checkbox"><input class="uni_style" type="checkbox" id="remember_me" name="_remember_me" value="on"/> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    </div>
                </div>
            </div>
            <div class="login-bottom clearfix">
                <button type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
            </div>
        </form>

        <div class="login-links login-linkstm clearfix">
            <span class="linkform"><a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a></span>
        </div>
    </div>
{% endblock main_content %}
