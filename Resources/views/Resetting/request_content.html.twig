{% trans_default_domain 'RzUserBundle' %}
<div class="row-fluid">
    <div class="span6 offset3">
        <div class="sonata-user-reset-password">
        <h1>{{ "title_user_resetting" | trans({}, 'RzUserBundle')}}</h1>
        {% if invalid_username is defined %}
            <div class="form-errors">
                <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            </div>
        {% endif %}
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="contact-form contact-form-register" >
            <p class="form_info">{{ 'form.label_username'|trans({}, 'RzUserBundle') }} <span class="required">*</span></p>
            <input type="text" id="username" name="username" required="required" class="span12"/>
            <div class="registration-submit">
                <input class="btn btn-rzcms-theme btn-register" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'RzUserBundle') }}" />
            </div>
        </form>
        </div>
    </div>
</div>
