<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="rz_user.sonata_security_roles.class">Rz\UserBundle\Form\Type\SecurityRolesType</parameter>
        <parameter key="rz_user.profile.form.type.class">Rz\UserBundle\Form\Type\ProfileType</parameter>
        <!--<parameter key="rz_user.update_password.form.type.class">Rz\UserBundle\Form\Type\ChangePasswordType</parameter>-->
    </parameters>

    <services>
        <service id="rz_user.sonata_security_roles" class="%rz_user.sonata_security_roles.class%">
            <tag name="form.type_extension" alias="sonata_security_roles" />
            <argument type="service" id="sonata.admin.pool" />
        </service>

        <service id="sonata.user.profile.form.type" class="%rz_user.profile.form.type.class%">
            <tag name="form.type" alias="rz_user_profile" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <!--<service id="sonata.user.update_password.form.type" class="%rz_user.update_password.form.type.class%">-->
            <!--<tag name="form.type" alias="rz_user_update_password" />-->
            <!--<argument>%fos_user.model.user.class%</argument>-->
        <!--</service>-->

    </services>
</container>
