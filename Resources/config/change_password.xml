<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.user.update_password.form.factory" class="FOS\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%fos_user.change_password.form.name%</argument>
            <argument>%rz_user.change_password.form.type%</argument>
            <argument>%fos_user.change_password.form.validation_groups%</argument>
        </service>

        <service id="rz_user.change_password.form.type" class="Rz\UserBundle\Form\Type\ChangePasswordFormType">
            <tag name="form.type" alias="rz_user_change_password" />
            <argument>%fos_user.model.user.class%</argument>
        </service>
    </services>

</container>
